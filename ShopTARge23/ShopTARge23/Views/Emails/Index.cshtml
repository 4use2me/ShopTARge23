@model ﻿ShopTARge23.Models.Emails.EmailViewModel

<style>
    /* Paigutuse joondus, et kõik oleks ühtlaselt joondatud */
    .form-group {
        display: flex;
        align-items: start;
        margin-bottom: 1.25rem;
    }

    /* Label jääb vasakule, sisendi jaoks määrame sobiva laiuse */
    .form-group label {
        text-align: left;
        padding-right: 10px;
        width: 10%; /* määrake labeli laius */
    }

    /* Input ja textarea võtavad ülejäänud koha */
    .form-group .col-sm-10 {
        flex: 1;
    }

    /* Väli täidab allesjäänud koha */
    .form-control {
        width: 100%; /* tagab, et input või textarea ei ole liiga lai */
    }
</style>

<!-- Main -->
<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Send email</h2>
        </header>

        <form method="post" class="container mt-4" enctype="multipart/form-data">
        <!-- E-mail väljad ja vormi ridad -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">To</label>
            <div class="col-sm-10">
                <input asp-for="To" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Subject</label>
            <div class="col-sm-10">
                <input asp-for="Subject" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Body</label>
            <div class="col-sm-10">
                <textarea rows="5" asp-for="Body" class="form-control"></textarea>
            </div>
        </div>
        <!-- Failide manused -->
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Attachments</label>
            <div class="col-sm-10">
                <input type="file" name="Attachments" multiple class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button asp-controller="Emails" asp-action="sendEmail" class="btn btn-primary" type="submit">Send</button>
            </div>
        </div>
        </form>
    </div>
</div>
   
<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script src="~/assets/js/jquery.min.js" asp-append-version="true"></script>
<script src="~/assets/js/browser.min.js" asp-append-version="true"></script>
<script src="~/assets/js/breakpoints.min.js" asp-append-version="true"></script>
<script src="~/assets/js/util.js" asp-append-version="true"></script>
<script src="~/assets/js/main.js" asp-append-version="true"></script>