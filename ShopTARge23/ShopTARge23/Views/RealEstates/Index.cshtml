@model IEnumerable<ShopTARge23.Models.RealEstates.RealEstatesIndexViewModel>
@{
    int rowNumber = 1;
}

<!-- Main -->
<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Real estate</h2>
        </header>

        <!-- Content -->
        <section id="content">
            <a asp-action="create" asp-controller="RealEstates" type="submit" class="button primary create">Create</a>
            <form method="post">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nr</th>
                            <th scope="col">Size</th>
                            <th scope="col">Location</th>
                            <th scope="col">Room number</th>
                            <th scope="col">Building type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var realestates in Model)
                        {
                            <tr>
                                <td>@rowNumber</td>
                                <td>@realestates.Size</td>
                                <td>@realestates.Location</td>
                                <td>@realestates.RoomNumber</td>
                                <td>@realestates.BuildingType</td>

                                <td>
                                    <a asp-action="details" asp-controller="realestates" asp-route-id="@realestates.Id" class="btn btn-info">Details</a>
                                    <a asp-action="update" asp-controller="realestates" asp-route-id="@realestates.Id" class="btn btn-primary">Update</a>
                                    <a asp-action="delete" asp-controller="realestates" asp-route-id="@realestates.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                            rowNumber += 1;
                        }
                    </tbody>
                </table>
            </form>
        </section>
    </div>
</div>
