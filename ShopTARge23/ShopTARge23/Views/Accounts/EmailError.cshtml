<style>
    .notification-message {
        text-align: center;
    }
</style>

<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <br />
            <br />
        </header>
        <div class="notification-message">
            ﻿@if (ViewBag.ErrorTitle == null)
            {
                <h3>
                    Ann error occured while processing your request. The support
                    team is notified and we are working on the fix.
                </h3>
            }
            else
            {
                <h3>@ViewBag.ErrorTitle</h3>
                <h4>@ViewBag.ErrorMessage</h4>
            }
        </div>
    </div>
</div>
