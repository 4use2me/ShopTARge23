@model ShopTARge23.Models.Accounts.LoginViewModel

<style>
    /* Paigutuse joondus, et kõik oleks ühtlaselt joondatud */
    .form-group {
        max-width: 600px;
        margin-left: 130px;
        margin-bottom: 1.25rem;
    }

        /* Label jääb vasakule, sisendi jaoks määrame sobiva laiuse */
        .form-group label {
            text-align: left;
            width: 15%; /* määrake labeli laius */
        }

        /* Input ja textarea võtavad ülejäänud koha */
        .form-group .col-sm-10 {
            flex: 1;
        }

    /* Väli täidab allesjäänud koha */
    .form-control {
        width: 100%; /* tagab, et input või textarea ei ole liiga lai */
    }
</style>

@{
    ViewBag.Title = "User Login";
}

<!-- Main -->
<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Local Account Login</h2>
        </header>

        <form method="post" class="container mt-4" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group" style="margin-left: 165px" >
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        Login
                    </button>
                    <div>
                        <a asp-action="ForgotPassword">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </form>

        <div class="col-md-6">
            <h1>External Login</h1>
            <hr />
            @{
                if (Model.ExternalLogins.Count == 0)
                {
                    <div>No External login</div>
                }
            }
        </div>
    </div>
</div>
