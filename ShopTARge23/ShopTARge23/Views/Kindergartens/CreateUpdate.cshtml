@model ShopTARge23.Models.Kindergartens.KindergartenCreateUpdateViewModel;

<!-- Main -->
<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            @if (Model.Id.HasValue)
            {
                <h2>Update</h2>
            }
            else
            {
                <h2>Create</h2>
            }
            <p>Kindergarten</p>
        </header>

        <!-- Content -->
        <section id="content">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedAt" type="hidden" />
                <input asp-for="UpdatedAt" type="hidden" />
                <table class="table table-hover">
                    <tr>
                        <td><label asp-for="GroupName" class="col-sm-2 col-form-label"></label></td>
                        <td> <input asp-for="GroupName" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td><label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label></td>
                        <td> <input asp-for="ChildrenCount" Type="text" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td> <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label></td>
                        <td><input asp-for="KindergartenName" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>  <label asp-for="Teacher" class="col-sm-2 col-form-label"></label></td>
                        <td><input asp-for="Teacher" class="form-control" /></td>
                    </tr>
                    <tr>
                        <td>   <label asp-for="Files" class="col-sm-2 col-form-label"></label></td>
                        <td> <input class="form-control" asp-for="Files" multiple type="file" /></td>
                    </tr>
                </table>
                <div>
                    @foreach (var images in Model.Image)
                    {
                        <partial name="_Images" model="images" />
                        <input asp-action="removeImage" asp-controller="kindergartens" asp-route-imageId="@images.ImageId" type="submit"
                               value="Remove Image" />
                    }
                </div>
                <br />
                @if (Model.Id.HasValue)
                {
                    <input asp-action="Update" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Update" />
                }
                else
                {
                    <input asp-action="Create" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Create" />
                }
                <br />
                <br />
                <div><a asp-action="Index" asp-controller="kindergartens" class="btn btn-success">Back</a></div>
            </form>
        </section>
    </div>
</div>
