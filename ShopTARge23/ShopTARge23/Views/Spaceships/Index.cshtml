@model IEnumerable<ShopTARge23.Models.Spaceships.SpaceshipsIndexViewModel>
@{
    int rowNumber = 1;
}

<!-- Main -->
<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Spaceships</h2>
        </header>

        <!-- Content -->
        <section id="content">
            <a asp-action="create" asp-controller="Spaceships" type="submit" class="button primary create">Create</a>
            <form method="post">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Nr</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Built date</th>
                            <th scope="col">Crew</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var spaceships in Model)
                        {
                            <tr>
                                <td>@rowNumber</td>
                                <td>@spaceships.Name</td>
                                <td>@spaceships.Typename</td>
                                <td>@spaceships.BuiltDate</td>
                                <td>@spaceships.Crew</td>
                                <td>
                                    <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-info">Details</a>
                                    <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-primary">Update</a>
                                    <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>

                            rowNumber += 1;
                        }
                    </tbody>
                </table>
            </form>
        </section>
    </div>
</div>
